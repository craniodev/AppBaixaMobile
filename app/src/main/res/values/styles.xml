<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorAccent">@color/detalhe</item>-->
    </style>


    <!--<style name="EditTextLoginCustom" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--<item name="colorControlActivated">#FFF</item>-->
    <!--<item name="colorControlNormal">#FFF</item>-->
    <!--</style>-->


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarCustom">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="style_linearlayout">
        <item name="android:background">@drawable/shape_gradient_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="background_login">
        <item name="android:background">@drawable/shape_gradient_background_home</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>




    <style name="logo">
        <item name="android:src">@mipmap/logo_blog_grande</item>
    </style>






</resources>
